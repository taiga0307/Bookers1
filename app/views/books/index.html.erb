<h1>Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
		    <th>Body</th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book.id) %></td>
			<td><%= link_to "Edit",edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy",book_path(book.id), method: :delete %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>



<h3>New book</h3>

<% if @book.errors.any? %>
  <div class= "alertalert-warning">
  	<h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>


<%= form_for(@book) do |f| %>
<!-- @book=Book.new＝＞createアクションで定義した空箱 -->

<h4>Title</h4>
<%= f.text_field :title %>
<!-- 空箱にtitleが登録されている -->
<h4>Body</h4>
<%= f.text_area :body %><br><br>
<!-- 空箱にbodyが登録されている -->
<%= f.submit 'Create Book' %>

<% end %>
