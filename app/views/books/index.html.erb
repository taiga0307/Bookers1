<header>
<h1 class="title">Books</h1>
<table>
	<thead>
		<tr>
			<th>Title</th>
		    <th>Body</th>
		</tr>
	</thead>
	<tbody>
	  <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "show",book_path(book.id) %></td>
			<td><%= link_to "edit",edit_book_path(book.id) %></td>
			<td><%= link_to "Destroy",book_path(book.id), method: :delete %></td>
	    </tr>
	  <% end %>
	</tbody>
</table>



<h1>New book</h1>
<%= form_for(@book) do |f| %>


<h4>Title</h4>
<%= f.text_field :title %>

<h4>Body</h4>
<%= f.text_area :body %><br><br>

<%= f.submit 'Create Book' %>

<% end %>

</header>